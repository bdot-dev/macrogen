		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/js/**"/>
			<mvc:exclude-mapping path="/css/**"/>
			<mvc:exclude-mapping path="/fonts/**"/>
			<mvc:exclude-mapping path="/images/**"/>
			<mvc:exclude-mapping path="/publishing/**" />
			<mvc:exclude-mapping path="/public/**" />
			<mvc:exclude-mapping path="/common/**"/>
			<mvc:exclude-mapping path="/rest/**"/>
			<mvc:exclude-mapping path="/inc/**"/>
			<mvc:exclude-mapping path="/locale/**"/>
			<mvc:exclude-mapping path="/menu/forward/**"/>
			<mvc:exclude-mapping path="/**/*.properties"/>
			<mvc:exclude-mapping path="/favicon**" />
			<ref bean="localeChangeInterceptor" />
		</mvc:interceptor>

		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/js/**"/>
			<mvc:exclude-mapping path="/css/**"/>
			<mvc:exclude-mapping path="/fonts/**"/>
			<mvc:exclude-mapping path="/images/**"/>
			<mvc:exclude-mapping path="/publishing/**" />
			<mvc:exclude-mapping path="/public/**" />
			<mvc:exclude-mapping path="/common/**"/>
			<mvc:exclude-mapping path="/rest/**"/>
			<mvc:exclude-mapping path="/inc/**"/>
			<mvc:exclude-mapping path="/locale/**"/>
			<mvc:exclude-mapping path="/menu/forward/**"/>
			<mvc:exclude-mapping path="/**/*.properties"/>
			<mvc:exclude-mapping path="/favicon**" />
			<ref bean="deviceResolver" />
		</mvc:interceptor>
	</mvc:interceptors>

	<bean id="menuResolver" class="macrogen.www.interceptor.MenuResolver" />
	<bean id="deviceResolver" class="macrogen.www.interceptor.DeviceResolver" />

	<!-- locale Message source-->
	<bean id="messageSource"
		class="macrogen.www.common.DatabaseMessageResource">
		<property name="messageSource" ref="charstService" />
	</bean>

	<!-- localeResolver-->
	<!-- <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
		<property name="defaultLocale" value="ko" />
	</bean> -->
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
		<property name="cookieMaxAge" value="31536000" />
	</bean>

	<!-- LocaleChangeInterceptor-->
	<!-- <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
		<property name="paramName" value="language"/>
	</bean> -->
	<bean id="localeChangeInterceptor" class="macrogen.www.interceptor.FrontLocaleChangeInterceptor" />

	<!-- for JFile -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0" />

	<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" p:order="1"
		p:prefix="/WEB-INF/jsp/" p:suffix=".jsp"
		p:requestContextAttribute="rc"
		p:viewClass="org.springframework.web.servlet.view.JstlView" />

	<bean name="jsonView" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView">
		<property name="contentType" value="application/json" />
		<property name="modelKeys">
			<set>
				<value>data</value>
				<value>result</value>
				<value>message</value>
			</set>
		</property>
	</bean>

	<!-- For Pagination Tag -->
	<bean class="macrogen.www.common.ImagePaginationRenderer" id="imageRenderer"/>
	<bean
		class="egovframework.rte.ptl.mvc.tags.ui.pagination.DefaultPaginationManager"
		id="paginationManager">
		<property name="rendererType">
			<map>
				<entry key="image" value-ref="imageRenderer" />
			</map>
		</property>
	</bean>

